---
import config from "@config/config.json";
export interface Props {
  url?: String;
  page: any;
}

const { url, page } = Astro.props;
const pagination = Math.ceil(page.total/page.size);
---

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      {Array(pagination).fill(0).map( (_,i) => (
        <li class={`page-item ${page.currentPage === i+1 ?'active':''}`}>
          <a class="page-link" href={`${config.site.baseUrl}${typeof(url)==='undefined'?'':url}${ i === 0 ?'' : i+1}`}>{i+1}</a>
        </li>
      ))}
    </ul>
</nav>