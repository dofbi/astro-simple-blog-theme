---
import Config from "../config.cjs";
import dayjs from 'dayjs'

export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<div class="col-lg-6">
  <div class="card card-hover mb-5 mx-lg-2">
    <div class="card-body pt-5 px-5 pb-4 text-center">
        { post.frontmatter.categories && post.frontmatter.categories.map((categorie) => (
        <a href={`${Config.siteBaseUrl}categorie/${categorie}/`} class="d-inline-block link-cta mb-4 text-uppercase">{ categorie }</a>
        ))}
      <h2 class="card-title mb-4">
        <a class="stretched-link" href={ `${Config.siteBaseUrl}posts/${post.frontmatter.slug}` }>{ post.frontmatter.title }</a>
      </h2>
      <p class="small"><span class="text-uppercase">{ dayjs(post.frontmatter.date).format(Config.dateFormat) }</span></p>
      <p class="card-text">{ post.frontmatter.description }</p>
      <p>
        { post.frontmatter.tags && post.frontmatter.tags.map((tag) => (
          <a href={`${Config.siteBaseUrl}tag/${tag}/`} class="link-tag text-dark">#{tag}</a>
        ))}
      </p>
    </div>
  </div>
</div>